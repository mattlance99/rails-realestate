<h1>Create a new Agent</h1>

<% if @agent.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@agent.errors.count, "error") %>
      prohibited this agent from logging in.
    </h2>

    <ul>
    <% @agent.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @agent, controller: 'agents', action: 'create' do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "create" %>
<% end %>
